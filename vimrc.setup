" Syntax
syntax enable

" Colors
set termguicolors
set background=dark
set t_ut=
colorscheme codedark 
set guicursor=n-v-c-sm:blinkon200

" Indenting
set tabstop=2
set shiftwidth=2
set autoindent

" Split panes
set splitbelow
set splitright

" Line Number
set number

" Expand tab
set expandtab

" Wrapping
set nowrap
set linebreak

" Searching
set ignorecase
set smartcase
set hlsearch

" Backup and swapfile
set nobackup
set nowb
set noswapfile

" Clipboard
set clipboard=unnamedplus

" Always move linewise in normal mode
nnoremap k gk
nnoremap j gj

" Moving between splits
nnoremap <C-H> <C-W><C-H>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>

" Moving lines
nnoremap <A-j> :m .+1<CR>==
nnoremap <A-k> :m .-2<CR>==
inoremap <A-j> <Esc>:m .+1<CR>==gi
inoremap <A-k> <Esc>:m .-2<CR>==gi
vnoremap <A-j> :m '>+1<CR>gv=gv
vnoremap <A-k> :m '<-2<CR>gv=gv

"Esc
inoremap jk <ESC>

